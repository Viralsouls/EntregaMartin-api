<div class="container mt-4">
    <h2 class="mb-4">Nuestros Productos üõçÔ∏è</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each products}}
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text"><strong>Categor√≠a:</strong> {{this.category}}</p>
                    <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary" onclick="addToCart('{{../user.cartId}}', '{{this._id}}')">
                        Agregar al Carrito
                    </button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <nav aria-label="Page navigation" class="mt-5">
        <ul class="pagination justify-content-center">
            {{#if hasPrevPage}}
            <li class="page-item"><a class="page-link" href="{{prevLink}}">Anterior</a></li>
            {{else}}
            <li class="page-item disabled"><a class="page-link" href="#">Anterior</a></li>
            {{/if}}

            <li class="page-item active" aria-current="page">
                <span class="page-link">{{page}}</span>
            </li>

            {{#if hasNextPage}}
            <li class="page-item"><a class="page-link" href="{{nextLink}}">Siguiente</a></li>
            {{else}}
            <li class="page-item disabled"><a class="page-link" href="#">Siguiente</a></li>
            {{/if}}
        </ul>
    </nav>
</div>

<script>
    async function addToCart(cartId, productId) {
        if (!cartId || cartId === 'ID_DE_CARRITO_DE_EJEMPLO') {
            alert('Error: ID de carrito no configurado.');
            return;
        }

        try {
            const response = await fetch(`/api/carts/${cartId}/products/${productId}`, {
                method: 'POST', // O PUT, dependiendo de tu l√≥gica para agregar/actualizar
            });

            if (response.ok) {
                alert('¬°Producto agregado al carrito!');
            } else {
                const errorData = await response.json();
                alert(`Error al agregar producto: ${errorData.message}`);
            }
        } catch (error) {
            console.error('Error de red:', error);
            alert('Error de conexi√≥n al agregar el producto.');
        }
    }
</script>